{
  "name": "markdown-viewer",
  "version": "1.0.0",
  "description": "Modern Electron-based markdown viewer with React and TypeScript",
  "main": "dist-electron/index.js",
  "author": "Balwant Singh <phenixcoder@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenixcoder/markdown.git"
  },
  "keywords": [
    "markdown",
    "viewer",
    "electron",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --publish never",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "dompurify": "^3.0.11",
    "electron-store": "^8.2.0",
    "highlight.js": "^11.9.0",
    "isomorphic-dompurify": "^2.15.0",
    "lucide-react": "^0.344.0",
    "marked": "^12.0.2",
    "mermaid": "^11.12.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "electron": "^32.2.8",
    "electron-builder": "^26.7.0",
    "electron-builder-squirrel-windows": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "playwright": "^1.44.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.6.0"
  }
}
